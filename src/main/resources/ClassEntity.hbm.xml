<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.vtm.course_registration_system.models.ClassEntity" table="class"
           schema="course_registration_system">
        <id name="id">
            <column name="ID" sql-type="int(11)"/>
        </id>
        <property name="name">
            <column name="NAME" sql-type="varchar(100)" length="100" not-null="true"/>
        </property>
        <property name="nummale">
            <column name="NUMMALE" sql-type="int(11)" not-null="true"/>
        </property>
        <property name="numfemale">
            <column name="NUMFEMALE" sql-type="int(11)" not-null="true"/>
        </property>
    </class>
</hibernate-mapping>